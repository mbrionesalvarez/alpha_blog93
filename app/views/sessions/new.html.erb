<h1 align="center">Log in</h1>

<%= form_for(:session, class: "shadow p-3 mb-3 bg-info rounded", url: login_path, local: true)  do |f| %>
    <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label text-light", placeholder: "Enter email" %><br/>
            <div class="col-10">
                <%= f.email_field :email, class: "form-control shadow-rounded" %> 
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label text-light", placeholder: "Enter password" %><br/>
            <div class="col-10">
                <%= f.password_field :password, autocomplete: "off", rows: 10, class: "form-control shadow-rounded" %> 
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit "Log in", class: "btn btn-outline-light btn-lg " %>
        </div>
    <% end %>
    </div> 