<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
    <%= will_paginate %>
    <% @users.each do |user| %>
        <div class="card md-4 w-25">
          <%= link_to user.username, user_path(user) %>
         <div class="card-body">
            <%= link_to gravatar_for(user), user_path(user) %>
            <%= pluralize(user.articles.count, "article") if user.articles %>
         </div>
        </div>
    <% end %>
    <%= will_paginate %>
</div>



