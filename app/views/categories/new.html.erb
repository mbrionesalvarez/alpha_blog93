<h1 align ="center">Create new category</h1>

    <%= render :partial => 'shared/errors', :locals => {:object => @category} %>
    <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
        <div class="form-group row">
            <%= f.label :name, class: "col-2 col-form-label text-light", placeholder: "Category name" %><br/>
            <div class="col-10">
                <%= f.text_field :name, class: "form-control shadow-rounded" %> 
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg " %>
        </div>
    <% end %>
</div> 
<div class="mb3">
    <%= link_to ' [ Return to articles listing ]', categories_path, class: "text-info" %>
